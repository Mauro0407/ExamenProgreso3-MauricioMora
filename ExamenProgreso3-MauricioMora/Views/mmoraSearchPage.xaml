<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ExamenProgreso3_MauricioMora.Views"
             x:Class="ExamenProgreso3_MauricioMora.Views.mmoraSearchPage"
             Title="Buscar Películas"
             BindingContext="{Binding Source={RelativeSource Self}}">

    <VerticalStackLayout>
        <Entry x:Name="mmora_entrySearch" 
               Placeholder="Ingrese el nombre de la película"
               Text="{Binding SearchQuery}" />
        <Button x:Name="mmora_btnSearch" 
                Text="Buscar"
                Command="{Binding SearchCommand}" />
        <Button x:Name="mmora_btnClear" 
                Text="Limpiar"
                Command="{Binding ClearCommand}" />
        <Label x:Name="mmora_lblResult" 
               Text="{Binding MovieDetails}" />
    </VerticalStackLayout>
</ContentPage>