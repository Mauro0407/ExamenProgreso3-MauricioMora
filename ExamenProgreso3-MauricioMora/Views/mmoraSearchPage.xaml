<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenProgreso3_MauricioMora.Views.mmoraSearchPage"
             Title="Buscar Películas">
    <VerticalStackLayout>
        <Entry x:Name="mmora_entrySearch" Placeholder="Ingrese el nombre de la película" />
        <Button x:Name="mmora_btnSearch" Text="Buscar" Clicked="OnSearchButtonClicked" />
        <Button x:Name="mmora_btnClear" Text="Limpiar" Clicked="OnClearButtonClicked" />
        <Label x:Name="mmora_lblResult" Text="Resultado de búsqueda" />
    </VerticalStackLayout>
</ContentPage>
